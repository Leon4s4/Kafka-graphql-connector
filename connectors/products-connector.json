{
  "name": "graphql-products-source",
  "config": {
    "connector.class": "com.example.graphqlconnector.GraphQLSourceConnector",
    "tasks.max": "1",
    "graphql.endpoint.url": "http://mock-graphql-api:4000/graphql",
    "entity.name": "products",
    "result.size": "5",
    "selected.columns": "id,name,description,price,category,inStock",
    "polling.interval.ms": "15000",
    "topic.prefix": "graphql_",
    "offset.field": "id",
    "query.timeout.ms": "30000",
    "max.retries": "3",
    "retry.backoff.ms": "1000",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "true"
  }
}